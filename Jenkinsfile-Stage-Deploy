pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '3'))
  }
  environment {
    GIT_URL = 'https://source.ohsu.edu/OCTRI-Apps/omop-annotator.git'
    DEPLOYMENT_FILE = 'k8s/stage/'
  }
  stages {
    stage('Prepare') {
      steps {
        deleteDir()
        checkoutMaster(env.GIT_URL)
      }
    }
    stage('Deploy to Kubernetes') {
      steps {
        applyKubernetesManifests(env.DEPLOYMENT_FILE, 'production')
      }
    }
  }
}
