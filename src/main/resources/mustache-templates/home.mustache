{{>layout/header}}

<div class="container vertical-space">
	<h1>{{ page_title }}</h1>

	<p class="instructions"><i class="fas fa-info-circle"></i> Select a pool to view topics for annotating.</p>

    <table class="table table-striped table-bordered sorted">
        <thead>
        <tr>
            <th>Pool Name</th>
            <th>Pool Comments</th>
            <th>Topic Set</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {{#pools}}
        <tr>
            <td>{{#name}}{{.}}{{/name}}</td>
            <td>{{#comments}}{{.}}{{/comments}}</td>
            <td>{{#topicSet}}{{name}}{{/topicSet}}</td>
            <td><a href="{{req.contextPath}}/judge/pool/{{id}}">View</a></td>
        </tr>
        {{/pools}}
        </tbody>
    </table>

</div>

{{>layout/footer}}
