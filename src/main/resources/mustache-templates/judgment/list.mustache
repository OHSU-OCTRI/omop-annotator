{{>layout/header}}
<div class="container">
    <h1>{{entityName}} List</h1>
    {{>components/messages}}
    <a href="{{req.contextPath}}{{baseRoute}}/new" class="new-entity btn btn-success"><i class="fas fa-plus-circle"></i> New</a>
    <table class="table table-striped table-bordered sorted">
        <thead>
        <tr>
            <th>User</th>
            <th>Pool entry</th>
            <th>Annotation label</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {{#entity_list}}
        <tr>
            <td>{{#user}}{{label}}{{/user}}</td>
            <td>{{#poolEntry}}{{poolEntry.label}}{{/poolEntry}}</td>
            <td>{{#annotationLabel}}{{annotationLabel.label}}{{/annotationLabel}}</td>
            <td>{{>components/list_actions}}</td>
        </tr>
        {{/entity_list}}
        </tbody>
    </table>
</div>
{{>layout/footer}}
