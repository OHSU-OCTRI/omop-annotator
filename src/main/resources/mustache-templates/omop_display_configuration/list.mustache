{{>layout/header}}
<div class="container">
    <h1>{{entityName}} List</h1>
    {{>components/messages}}
    <table class="table table-striped table-bordered sorted">
        <thead>
        <tr>
            <th>Entity name</th>
            <th>Field name</th>
            <th>Column display</th>
            <th>Visible</th>
            <th>Filter</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {{#entity_list}}
        <tr>
            <td>{{#entityName}}{{.}}{{/entityName}}</td>
            <td>{{#fieldName}}{{.}}{{/fieldName}}</td>
            <td>{{#columnDisplay}}{{.}}{{/columnDisplay}}</td>
            <td>{{#visible}}<span class="fa fa-check text-success"></span>{{/visible}}</td>
            <td>{{#filter}}<span class="fa fa-check text-success"></span>{{/filter}}</td>
            <td>
            {{#editable}}
            <a href="{{req.contextPath}}{{baseRoute}}/{{id}}/edit">Edit</a>
            {{/editable}}
            {{^editable}}
            (Not Editable)
            {{/editable}}
            </td>
        </tr>
        {{/entity_list}}
        </tbody>
    </table>
</div>
{{>layout/footer}}